rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regras para a coleção 'inventory'
    match /inventory/{productId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    
    // Regras para a coleção 'deliveries' (entregas/baixas)
    match /deliveries/{deliveryId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    
    // Regras para a coleção 'beneficiaryApplications' (candidaturas)
    match /beneficiaryApplications/{applicationId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    // Regras para lookup tables - permitir leitura pública
    match /good_types/{goodTypeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /inventory_status/{statusId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /delivery_status/{statusId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /application_status/{statusId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /transaction_type/{typeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Regras para a coleção 'users' (se necessário)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para a coleção 'alteracoes' (log de ações)
    match /alteracoes/{alteracaoId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Regras para a coleção 'requests' (pedidos dos beneficiários)
    match /requests/{requestId} {
      // Administrador pode ler, atualizar e eliminar todos os pedidos
      allow read, update, delete: if request.auth != null && 
                                     request.auth.uid == 'nfvJnZzqgkRbEpzGURPdzcqrWz22';
      
      // Beneficiários podem criar pedidos
      allow create: if request.auth != null;
      
      // IMPORTANTE: Beneficiários podem ler TODOS os pedidos
      // O filtro por email é feito no código da app, não nas regras
      // Isto é necessário para o addSnapshotListener funcionar corretamente
      // O listener precisa de ler a coleção inteira para funcionar
      allow read: if request.auth != null;
    }
    
    // Bloquear acesso a outras coleções por padrão
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

